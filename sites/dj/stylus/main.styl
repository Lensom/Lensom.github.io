@import "_font-face.styl"
@import "_libs.styl"
@import "_vars.styl"

// -------------------------- All --------------------------
*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	&:before, &:after
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		box-sizing border-box

// -------------------------- Placeholder --------------------------
::placeholder,
	color #666
	opacity 1

// -------------------------- Main styles --------------------------
html, body
	height 100%
	background #121212

body
	font-size 16px
	min-width 320px
	position relative
	line-height 1.65
	font-family $default-font
	overflow-x hidden
	margin 0

img
	display block
	max-width 100%
	height auto

ul 
	margin 0
	padding 0

li 
	list-style-type none

h1,h2,h3,
h4,h5,h6 
	margin 0
	padding 0
	
p 
	margin 0
	padding 0

a
	transition .2s color ease-in

.wrapper
	margin 0 auto
	padding 0 15px
	max-width 1434px

.title
	color: $white
	font-family GaramondRegular
	font-size: 91px
	font-weight: 400
	line-height: 80.08px
	text-transform: uppercase
	letter-spacing: 5px

.description 
	color $white-2
	font-size: 23px
	font-weight: 400
	line-height: 31.5px
	letter-spacing: 1.25px

.text 
	font-family OpenSansRegular
	font-size 30px
	line-height 42px
	color $black-2
	letter-spacing 2.1px

.btn 
	color $white
	font-family GaramondRegular
	font-size: 23px;
	text-transform: uppercase
	text-decoration none
	border 2px solid $white
	letter-spacing: 1px;	
	text-transform: uppercase;
	transition all .3s ease
	padding 14px 30px

	&-more 	
		box-sizing content-box
		&:hover 
			background $black
			border-color $white-2
	&-slide
		display inline-block
.logotype-mobile
	display none

hr 
	display inline-block
	width 79px
	height 3px
	position relative
	top 16px



// -------------------------- Close button --------------------------
.navigation
	&-btn
		cursor pointer
		height 30px
		width 30px
		background-color transparent
		outline none
		user-select none
		position relative
		z-index 5
		border none
		display none
		top 10px
		left -20px
	&-bar 
		display block
		width 26px
		height 2px
		background-color $close
		position absolute
		top 0
		left 0
		transition all .3s ease
.bar-2
	top 8px
.bar-3
	top 16px	

.menu
	.active 
		.bar-1
			background-color transparent
		.bar-2
			transform rotate(45deg)
		.bar-3
			transform rotate(-45deg)
			top 8px

// -------------------------- Menu --------------------------
.menu 
	display flex
	align-items flex-end
	justify-content space-between
	margin-left 88px
	position relative
	&-item 
		display inline-block
		margin -12px 4px 0 7px
		a 
			color $white
			font-family GaramondRegular
			font-size 22.5px
			line-height 56.6px
			text-transform uppercase
			text-decoration none
			letter-spacing 2px
			&:hover 
				color $white-2
		img 
			position relative
			width 75%
			top 44px
			margin 0 auto			
			
	&-social 
		margin-bottom 12px
		position relative
		margin-right -152px
		&-item 
			display inline-block
			margin 0 2px
			&:hover img 
				transform: scale(1.05)
			img 
				width 80%
				transition all .2s ease
	&-wrapper
		transition all 1s ease
	&-wrapper.show
		transform translateX(0)
	.navigation-bar
		background-color $white

// -------------------------- Header --------------------------
.header 
	// min-height 2258px
	background-color #191919
	background-image url(../img/header_back.jpg)
	background-position center 0px
	background-size cover
	position relative
	transition all .3s ease
	position fixed 
	width 100%
	top 0
	z-index -1000 !important
	padding-bottom 150px
	&:before 
		content ''
		background-image url(../img/lines.png)
		top -131px
		left -87.5%
		position absolute
		width 155%
		height 135px
	&-content 
		// margin-top 39.8%
		margin-top 550px
	&-subtitle
		background-color rgba(19, 13, 11, .81)
		max-width 844px
		margin-top 80px
		// margin-top 6.3%
		padding 24px 20px 24px 25px
	&-btn 
		margin-top 40px
		// margin-top 3%		
	&-slide
		position absolute
		width 100%
		bottom 72px
		text-align center
		margin 0 auto 
		img  
			margin 0 auto 
			animation scaling 2s linear infinite
	&-title 
		position relative
		&:after
			content ''
			position absolute 
			bottom -90px 
			left -570px
			width 992px
			height 103px
			background-image url(../img/lines.png)
	.btn
		&-more
			background-color rgba(0, 0, 0, .51)
			&:hover
				background-color $black

// -------------------------- Studio's section --------------------------
.studio
	text-align center
	background-image url(../img/studio_back.png)
	padding 110px 0 220px
	hr 
		background-color $white
	&-description
		margin-top 30px
	&-items 
		display flex
		justify-content space-between
		padding 95px 0 35px
		flex-wrap wrap
	&-btn
		margin-top -6px
	&-item 
		height 640px
		width 640px
		max-height 640px
		position relative
		overflow hidden 
		box-shadow: 0 0 108px 9px rgba(0, 0, 0, 0.66)		
		margin 24px 0 95px
		background-size cover
		text-align left
		transition all .3s ease
		&:hover
			.studio-img
				transform scale(1.1)				
		&:first-child
			.studio-img
				background-image: url(../img/studios1.jpg)				
		&:nth-child(2)
			.studio-img
				background-image: url(../img/studios2.jpg)
		&:nth-child(3)
			.studio-img
				background-image: url(../img/studios3.jpg)
		&:nth-child(4)
			.studio-img
				background-image: url(../img/studios4.jpg)
		&:nth-child(5)
			.studio-img
				background-image: url(../img/studios5.jpg)
		&:nth-child(6)
			.studio-img
				background-image: url(../img/studios7.jpg)
		&:nth-child(7)
			.studio-img
				background-image: url(../img/studiounder.jpg)
		&:nth-child(8)
			.studio-img
				background-image: url(../img/studios6.jpg)
		&:last-child
			margin-top -360px
		&:before 
			content ''
			position absolute 
			top 42px
			width 80px
			height 2px
			left 30px 
			background $white
			z-index 4
		&:after 
			content ''
			position absolute
			width 15px
			height 31px
			bottom 48px
			left 38px 
			background-image url(../img/studio-arrow.png)		
		span 
			color $white
			font-family OpenSansBold
			font-size 23px
			line-height 42px
			text-transform uppercase
			letter-spacing 2px
			position absolute
			top 40px
			left 30px
			z-index 4
		img 
			transition all .5s ease
		a
			display block
			width 100%
			height 100%
			z-index 5
			position relative
	&-img
		width 100%
		height 100%
		background-size cover
		background-position center center
		transition all .3s ease

	.small-size.studio-item
		height 256px
		width 256px
		&:before
			top 40px
			left 24px
		span 
			// top 38px
			top 47px
			left 26px
			line-height 24px
		&:after 
			bottom 36px
			left 30px

// -------------------------- Music --------------------------
	.music
		padding 120px 0 152px
		background $white
		&-title
			color $black-2
			padding-bottom 40px
		&-description
			color $black-2
		&-content 
			text-align center
		&-slider
			display flex
			margin-top 82px
		&-item-text
			color $black-2
			line-height 42px
			text-align left
			padding-left 120px
			margin-top -10px
			font-size: 23px
			line-height: 31.5px
			letter-spacing: 1.8px
			p 
				margin-bottom 36px
		&-btn
			margin-top 125px
			.btn
				border-color $black
				color $black
				background transparent
				&:hover
					background $black
					color $white
		.owl
			&-carousel
			&-item
				width: 640px
				height 640px
			&-dots
				margin-top 12px
				text-align center
			&-dot
				background $accent !important
				width 12px
				height 12px
				margin 0 17px
				border-radius 50%
				outline none
			&-dot.active
				background $black !important
		hr 
			background $black-2

// -------------------------- Post --------------------------
.post
	background-image: url(../img/post_back.jpg)
	text-align center
	background-size cover
	padding 120px 0 144px
	&-title
		padding-bottom 48px
	&-description
		p 
			padding-bottom 30px
	hr 
		background $white
		top 8px
	&-btn 
		margin-top 482px
		.btn
			background transparent
			&:hover
				background-color $black

// -------------------------- Case --------------------------
.case
	background-image url(../img/case_back.jpg)
	text-align center
	padding 120px 0 330px
	&-title
		margin-bottom 35px
	hr
		top 20px
	&-items
		display flex
		justify-content space-between
	&-item
		max-width 638px
		text-align left
		background-color $white
		margin 112px 0 100px
		padding-bottom 10px
		&:first-child
			.case-img
				background-image url(../img/showcase1.jpg)
		&:last-child
			.case-img
				background-image url(../img/showcase2.jpg)
	hr 
		background-color $white
	&-body
		padding 40px 36px
	&-subtitle
		font-family GaramondRegular
		font-size 46px
		line-height 44.26px
		text-transform uppercase
		color $black
		letter-spacing 3px
	&-subdescription
		font-family OpenSansRegular
		font-size 23px
		line-height 31.5px
		color $black-2
		letter-spacing 2.1px
		padding 30px 0 0
		hr 
			background $black
			top -32px
			height 3px
			margin 0
		p
			padding-bottom 55px
	&-img
		height 410px
		background-position center center
		background-size cover
	&-subbtn
		position relative
		margin-top -14px
		transition all .3s ease
		.btn-case
			&:hover
				color $close
	.btn-more
		background transparent
		&:hover
			background-color $black
	
.btn-case
	font-family OpenSansBold
	font-size 23px
	line-height 31.5px
	text-transform uppercase
	color $black-2
	&:before
		content ''
		position absolute
		top 5px
		left 7px
		background-image url(../img/case-arrow.png)
		width 10px
		height 22px


// -------------------------- Footer --------------------------
.footer
	background-color $gray
	&-logo
		text-align center
	a
		display inline-block
		img
			margin 0 auto
			width 80%
	&-top
		background-color $gray
		position relative
		top -215px
		padding-top 40px
		max-height 568px
		box-shadow: 0 -180px 208px -100px rgba(0, 0, 0, 0.81);
	&-btn
		position absolute
		top 64px
		right 55px
		width 46px
		height 46px
		background transparent
		border none
		outline none
		z-index 5
		cursor pointer
		.navigation-bar
			width 66px			
		.bar-1
			transform rotate(45deg)
		.bar-2
			transform rotate(-45deg)
			top 0
	&-items
		display flex
		justify-content space-between
		padding 9px 65px
	&-title
		font-family GaramondRegular
		font-size 30px
		line-height 25px
		text-transform uppercase
		letter-spacing 2px
		color $white
		padding 26px 0 20px
	&-social
		padding-top 24px
		a 
			margin-right 14px
	&-address
		font-size 18px
		line-height 32px
		letter-spacing 1.68px
		color $white-2
		a 
			font-size 18px
			line-height 32px
			letter-spacing 1.68px
			color $white-2
			text-decoration none
	&-subtext
		color rgba(144, 143, 143, .27)
		font-size 18px
		line-height 31px
		padding-top 50px
		letter-spacing 1.68px
		a
			color rgba(144, 143, 143, .27)
			text-transform uppercase
			&:hover
				color rgba(144, 143, 143, 1)
	&-subtitle
		color $white-2
		font-size 18px
		line-height 31px
		letter-spacing 1.68px
	input
		margin 4px 0 10px
		background-color $black-2
		border 2px solid $black-2
		font-size 24px
		outline none
		width 100%
		padding 16px 30px
		color $white
	button[type=submit]
		display block
		font-family: GaramondRegular
		font-size 19px
		line-height 35px
		text-transform uppercase
		background transparent
		color $white
		letter-spacing 2px
		margin-top 20px
		padding 5px 18px
		border 3px solid $white
		cursor pointer
		outline none
		transition all .3s ease
		&:hover
			background $black
	&-link
		a 
			font-size 18px
			color $white-2
			line-height 31px
			text-decoration underline
			letter-spacing 1.68px
			font-family OpenSansRegular
			&:hover
				color $white
				text-decoration none
	&-list-2
		margin-top 38px
	&-subscribe
		margin-left -34px
	&-links
		margin-right 60px
	&-copyright
		font-size 22px
		line-height 31.5px
		color $gray
		letter-spacing 2.1px
	&-bottom
		background $black-2
		text-align center
		padding 18px 0
	hr 
		background $white
		height 3px
.form-wrapper
	width 371px


// -------------------------- Animation --------------------------
@keyframes scaling {
	0% {
		transform: scale(1)
	}	
	50% {
		transform: scale(1.1)
	}
	100% {
		transform scale(1)
	}
}

.loaderArea {
  background: #333;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
  right:0;
  bottom:0;
  z-index: 100000;
	display: flex;
	align-items: center;
	justify-content: center;	
	animation: scaling 2s linear infinite;
}

.loaderArea img {
	transform scale(.5)
}





// -------------------------- Media --------------------------
@import "_media.styl" // Always at the end
